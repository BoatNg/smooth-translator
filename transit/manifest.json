{
  "manifest_version": 2,

  "name": "TransIt",
  "description": "划词翻译",
  "version": "1.0",
  
  "icons": {
    "48": "icon48.png"
  },

  "background": {
    "scripts": ["js/sugar.min.js", "js/helpers.js", "js/event.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/transit.css"],
      "js": ["js/sugar.min.js", "js/helpers.js", "js/transit.js"]
    }
  ],

  "permissions": [
    "tabs", "http://fanyi.youdao.com/openapi.do", "http://trit.herokuapp.com/api/items"
  ]
}

