{
  "staticFiles": [
    "src/manifest.json",
    "src/*.html",
    "src/img/**/*"
  ],

  "vendorScripts": [
    "src/js/lib/{lib-all,angular-all}.js"
  ],

  "scripts": [
    "src/js/*.js"
  ],

  "allScripts": [
    "Gulpfile.js",
    "src/js/**/*"
  ],

  "styles": [
    "src/css/*.scss"
  ],

  "allStyles": [
    "src/css/**/*"
  ],

  "ignoreScripts": [
    "sugar",
    "jquery",
    "angular",
    "angular-elastic",
    "./lib/crxkit"
  ]
}